{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/web": {
      "entry": ["src/index.tsx!", "src/config/routes.ts", "vite.config.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "apps/api": {
      "entry": ["server.ts!"],
      "project": ["**/*.{ts,js,mts,mjs}"],
      "ignore": ["test/**", "tests/**", "scripts/**"]
    },
    "apps/docs": {
      "entry": ["src/main.tsx", "server.ts", "vite.config.ts"],
      "project": ["src/**/*.{ts,tsx}", "*.ts"]
    },
    "apps/sites": {
      "entry": ["src/main.tsx", "vite.config.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "apps/mobile": {
      "entry": ["app/_layout.tsx"],
      "project": ["**/*.{ts,tsx}"],
      "ignore": [".expo/**", "android/**", "ios/**"]
    },
    "packages/shared": {
      "entry": ["src/index.ts!"],
      "project": ["src/**/*.{ts,tsx}"],
      "ignore": ["src/tiptap-editor/**"]
    },
    "packages/eslint-config": {
      "entry": ["base.js", "react.js", "node.js"],
      "project": ["*.js"]
    },
    "services/mcp": {
      "entry": ["src/index.ts!"],
      "project": ["src/**/*.ts"]
    },
    "documentation": {
      "entry": ["docusaurus.config.ts", "sidebars.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  },
  "ignoreDependencies": ["@semantic-release/*", "cross-env", "@gruenerator/*"],
  "ignoreWorkspaces": ["apps/desktop"],
  "rules": {
    "binaries": "off"
  }
}
