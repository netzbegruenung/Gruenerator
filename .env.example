# Gruenerator Production Environment Variables
# Copy to .env and fill in your values
# Used by: docker-compose.prod.yml (api, docs, mcp services)
#
# For Coolify: Add these as environment variables in your service configuration

# =============================================================================
# Required: Domain Configuration
# =============================================================================
DOMAIN=gruenerator.example.com
BASE_URL=https://gruenerator.example.com
AUTH_BASE_URL=https://gruenerator.example.com/api
MOBILE_REDIRECT_CALLBACK=gruenerator://auth/callback

# =============================================================================
# Required: AI Service API Keys (at least one required)
# =============================================================================
# Anthropic Claude
CLAUDE_API_KEY=sk-ant-...
CLAUDE_API_ENDPOINT=https://api.anthropic.com/v1/complete

# OpenAI (optional)
OPENAI_API_KEY=sk-...

# Other AI providers (optional)
TAVILY_API_KEY=
LLAMA_API_KEY=
MISTRAL_API_KEY=
LITELLM_API_KEY=

# =============================================================================
# Optional: AWS Bedrock (alternative to direct Anthropic API)
# =============================================================================
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BEDROCK_CLAUDE_MODEL_ID=
BEDROCK_CLAUDE_MODEL_ARN=

# =============================================================================
# Required: Database Configuration
# =============================================================================
# PostgreSQL
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432
POSTGRES_USER=gruenerator
POSTGRES_PASSWORD=
POSTGRES_DATABASE=gruenerator
POSTGRES_SSL=false
POSTGRES_SSL_REJECT_UNAUTHORIZED=false

# Redis (for sessions)
# - Local development (pnpm dev):  redis://localhost:6379
# - Docker Compose (dev/prod):     redis://redis:6379
# - External managed Redis:        redis://user:pass@host:port
REDIS_URL=redis://localhost:6379

# =============================================================================
# Required: Authentication (Keycloak)
# =============================================================================
KEYCLOAK_CLIENT_ID=Gruenerator
KEYCLOAK_CLIENT_SECRET=
KEYCLOAK_BASE_URL=https://your-keycloak.example.com
KEYCLOAK_REALM=gruenerator

# Session security
SESSION_SECRET=generate-a-random-32-char-string

# =============================================================================
# Optional: Etherpad Integration
# =============================================================================
ETHERPAD_API_URL=https://your-etherpad.example.com/
ETHERPAD_API_KEY=
ETHERPAD_FRONTEND_URL=https://your-etherpad.example.com

# =============================================================================
# Optional: Qdrant Vector Database
# =============================================================================
QDRANT_URL=https://your-qdrant.example.com/
QDRANT_API_KEY=
QDRANT_BASIC_AUTH_USERNAME=
QDRANT_BASIC_AUTH_PASSWORD=

# =============================================================================
# Optional: External APIs
# =============================================================================
# German Bundestag API
BUNDESTAG_API_KEY=

# Gruene API
GRUENE_API_KEY=

# IONOS DNS
IONOS_API_KEY=

# =============================================================================
# Optional: Canva Integration
# =============================================================================
CANVA_CLIENT_ID=
CANVA_CLIENT_SECRET=
CANVA_REDIRECT_URI=https://gruenerator.example.com/api/canva/auth/callback

# =============================================================================
# Optional: Image Generation
# =============================================================================
ABYSSSALE_API_KEY=
BFL_API_KEY=

# =============================================================================
# Optional: Speech/Transcription
# =============================================================================
ASSEMBLYAI_API_KEY=
GLADIA_API_KEY=

# =============================================================================
# Internal: Service Configuration (usually don't need to change)
# =============================================================================
# API Service
PORT=3001
PDF_TEXT_EXTRACTION_ENDPOINT=http://api:3001/api/pdf-extraction

# MCP Service (MCP_PUBLIC_URL is required)
MCP_PORT=3004
MCP_PUBLIC_URL=https://your-domain.com/mcp-server
MCP_LOG_LEVEL=INFO

# Docs Service
DOCS_PORT=3000

# Frontend Build Variables (set during Docker build, not runtime)
VITE_API_BASE_URL=/api
VITE_VERIFY_PASSWORD=
VITE_APP_ENV=production
VITE_MAINTENANCE_MODE=false
