{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Grünerator Docs",
  "version": "0.1.0",
  "identifier": "de.gruenerator.docs-desktop",
  "build": {
    "beforeBuildCommand": "cd ../.. && pnpm exec cross-env TAURI_ENV_PLATFORM=desktop VITE_API_BASE_URL=https://gruenerator.eu/api VITE_HOCUSPOCUS_URL=wss://docs.gruenerator.eu pnpm --filter @gruenerator/apps-docs build",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3002",
    "frontendDist": "../../../apps/docs/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Grünerator Docs",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "visible": false
      },
      {
        "label": "splashscreen",
        "title": "Grünerator Docs",
        "url": "splashscreen.html",
        "width": 400,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.gruenerator.eu https://auth.services.moritz-waechter.de https://*.supabase.co wss://*.supabase.co ws://localhost:1240 wss://*.gruenerator.eu https://api.mistral.ai; img-src 'self' data: blob: https:; font-src 'self' data:; media-src 'self' blob:; frame-ancestors 'none'",
      "freezePrototype": false,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "release": "1",
        "epoch": 0
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "entitlements": "Entitlements.plist",
      "exceptionDomain": null,
      "dmg": {
        "background": "assets/dmg-background.png",
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 }
      }
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["German", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": "assets/installer-header.png",
        "sidebarImage": "assets/installer-sidebar.png",
        "compression": "lzma"
      },
      "wix": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["gruenerator-docs"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFMUM4RTlDOEMxMEI1NjEKUldSaHRSQ01uSTRjL3JBdnpFZFpuREpEcFQ5MHI3bE5yVEU3SXE3NzUzUXVkMEJlYVJYOCs0N1EK",
      "endpoints": ["https://gruenerator.eu/api/releases/docs-updater/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
