# Grünerator Chat - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database (IMPORTANT: Uses the main Grünerator database!)
# ============================================
# Connect to the same PostgreSQL instance as apps/api
DATABASE_URL=postgresql://gruenerator:password@localhost:5432/gruenerator

# ============================================
# AI Providers
# ============================================
# Mistral (primary provider)
MISTRAL_API_KEY=your-mistral-api-key

# LiteLLM Provider (GPT OSS - optional)
# Self-hosted OpenAI-compatible endpoint for local models
# LITELLM_API_KEY=your-litellm-api-key
# LITELLM_BASE_URL=https://litellm.netzbegruenung.verdigado.net

# ============================================
# MCP Server (for semantic search tools)
# ============================================
# Local development:
MCP_URL=http://localhost:3003
# Production:
# MCP_URL=https://mcp.gruenerator.eu

# ============================================
# Authentication (optional)
# ============================================
# Set to "true" to skip authentication entirely (for testing/demos)
# NEXT_PUBLIC_AUTH_DISABLED=true
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3210

# Keycloak OIDC (optional, for user authentication)
# KEYCLOAK_ID=gruenerator-chat
# KEYCLOAK_SECRET=your-keycloak-client-secret
# KEYCLOAK_ISSUER=https://user.netzbegruenung.de/realms/gruenerator
