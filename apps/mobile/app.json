{
  "expo": {
    "name": "Grünerator",
    "slug": "gruenerator",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "gruenerator",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#005538"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "de.gruenerator.app",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "package": "de.gruenerator.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#005538"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "adjustNothing",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "gruenerator"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-document-picker",
      [
        "expo-image-picker",
        {
          "photosPermission": "Erlaube Grünerator Zugriff auf deine Fotos für die Reel-Erstellung",
          "cameraPermission": "Erlaube Grünerator die Kamera für Videoaufnahmen zu nutzen"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Erlaube Grünerator, Reels in deiner Galerie zu speichern",
          "savePhotosPermission": "Erlaube Grünerator, Reels in deiner Galerie zu speichern"
        }
      ],
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": false,
          "supportsPictureInPicture": false
        }
      ],
      "expo-font",
      "expo-notifications",
      "expo-speech-recognition"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "86989c3a-549f-47fe-b141-df891ff6e075"
      }
    },
    "owner": "moritzius"
  }
}
