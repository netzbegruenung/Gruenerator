{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "react-native-gifted-chat": [
        "./types/react-native-gifted-chat.d.ts"
      ],
      "@gruenerator/shared": [
        "../../packages/shared/src/index.ts"
      ],
      "@gruenerator/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "stores/**/*.ts",
    "stores/**/*.tsx",
    "theme/**/*.ts",
    "theme/**/*.tsx",
    "utils/**/*.ts",
    "utils/**/*.tsx",
    "types/**/*.d.ts",
    "config/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "eslint.config.js",
    "../../packages/shared/src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
