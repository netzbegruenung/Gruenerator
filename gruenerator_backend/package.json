{
  "name": "gruenerator_backend",
  "version": "1.0.0",
  "description": "Backend for Gruenerator project",
  "main": "server.mjs",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start:backend": "PORT=3001 node server.mjs",
    "kill:yjsport": "npx kill-port 1234",
    "start:yjs": "npm run kill:yjsport && node yjsServer.mjs",
    "start": "npm run start:dev",
    "dev": "nodemon server.mjs",
    "test:auth": "jest test/auth.test.js",
    "test:integration": "jest test/integration.test.js",
    "test:passport": "jest test/passport.test.js",
    "setup:authentik-sources": "node scripts/setupAuthentikSources.js",
    "setup:authentik-sources:dry-run": "node scripts/setupAuthentikSources.js --dry-run",
    "setup:authentik-sources:force": "node scripts/setupAuthentikSources.js --force",
    "start:dev": "cross-env NODE_ENV=development concurrently --kill-others-on-exit --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"npm:start:backend\" \"npm:start:yjs\"",
    "start:prod": "cross-env NODE_ENV=production concurrently --kill-others-on-exit --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"npm:start:backend\" \"npm:start:yjs\"",
    "test:errors": "NODE_ENV=test jest tests/testErrorHandling.js",
    "download-whisper": "npx nodejs-whisper download",
    "offboarding": "node scripts/offboarding-cron.js",
    "offboarding:status": "node -e \"require('./services/offboardingService').OffboardingService.validateConfig(); console.log('âœ“ Offboarding configuration is valid');\"",
    "mem0:setup": "cd mem0_service && python3 -m venv venv && venv/bin/pip install -r requirements.txt",
    "mem0:install": "cd mem0_service && venv/bin/pip install -r requirements.txt",
    "mem0:dev": "cd mem0_service && venv/bin/python main.py",
    "mem0:prod": "cd mem0_service && venv/bin/uvicorn main:app --host 127.0.0.1 --port 3002",
    "start:with-mem0": "concurrently --kill-others-on-exit --prefix-colors \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm:start:backend\" \"npm:start:yjs\" \"npm:mem0:prod\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.21.1",
    "@aws-sdk/client-bedrock-runtime": "^3.830.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@goauthentik/api": "^2025.4.1-1748622869",
    "@mistralai/mistralai": "^1.7.2",
    "@node-saml/passport-saml": "^5.0.1",
    "@supabase/supabase-js": "^2.49.1",
    "@tavily/core": "^0.0.3",
    "@tus/file-store": "^1.5.1",
    "@tus/server": "^1.10.2",
    "@y/websocket-server": "^0.1.1",
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "canvas": "^2.11.2",
    "cheerio": "^1.0.0",
    "compression": "^1.7.5",
    "connect-redis": "^8.1.0",
    "cors": "^2.8.5",
    "crawlee": "^3.13.8",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.1",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodejs-whisper": "^0.2.6",
    "officeparser": "^5.1.1",
    "openai": "^4.73.0",
    "openid-client": "^5.6.5",
    "pako": "^2.1.0",
    "passport": "^0.7.0",
    "passport-saml": "^3.2.4",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.10.38",
    "playwright": "^1.48.0",
    "redis": "^4.7.0",
    "sharp": "^0.33.4",
    "tesseract.js": "^6.0.1",
    "turndown": "^7.2.0",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.2",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true,
    "clearMocks": true
  }
}
