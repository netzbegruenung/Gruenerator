{
  "campaignId": "christmas2025",
  "name": "Weihnachten 2025",
  "active": true,
  "defaultPrompt": {
    "systemRole": "Du bist ein Weihnachtspoet für festliche, warmherzige Gedichte.",
    "singleItemTemplate": "Erstelle ein Weihnachtsgedicht. Es ist über folgenden Ort: {{location}}.\n\nDetails (Optional): {{details}}\n\nRegeln:\n- GENAU 5 Zeilen\n- Max 20 Zeichen pro Zeile\n- Nutze {{location}} im Gedicht\n- Warmherzig und festlich\n- Einfache Sprache\n- Gerne Reime\n\nNur die 5 Zeilen ausgeben.",
    "multiItemTemplate": "Erstelle 4 VERSCHIEDENE Weihnachtsgedichte mit je GENAU 5 Zeilen für diesen Ort: {{location}}.\n\nDetails (Optional): {{details}}\n\nRegeln für JEDES Gedicht:\n- GENAU 5 Zeilen\n- Max 20 Zeichen pro Zeile\n- Nutze {{location}} im Gedicht\n- Warmherzig und festlich\n- Einfache Sprache\n- Gerne Reime\n\nWICHTIG:\n- Erstelle 4 UNTERSCHIEDLICHE Gedichte\n- Trenne die Gedichte mit '---'\n- Nur die Zeilen ausgeben, getrennt durch '---'\n\nFormat:\nZeile 1\nZeile 2\nZeile 3\nZeile 4\nZeile 5\n---\nZeile 1\nZeile 2\nZeile 3\nZeile 4\nZeile 5\n---\n(2 weitere Gedichte)",
    "options": {
      "temperature": 0.9,
      "useBedrock": true,
      "max_tokens": 1000
    }
  },
  "defaultResponseParser": {
    "type": "lineExtractor",
    "config": {
      "expectedLines": 5,
      "outputFields": ["line1", "line2", "line3", "line4", "line5"],
      "trimLines": true,
      "filterEmpty": true,
      "minCharsPerLine": 10,
      "maxCharsPerLine": 20
    }
  },
  "defaultMultiResponseParser": {
    "type": "multiLineExtractor",
    "config": {
      "expectedPoems": 4,
      "linesPerPoem": 5,
      "separator": "---",
      "outputFields": ["line1", "line2", "line3", "line4", "line5"],
      "trimLines": true,
      "filterEmpty": true,
      "minCharsPerLine": 10,
      "maxCharsPerLine": 20
    }
  },
