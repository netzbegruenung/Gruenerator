{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Grünerator",
  "version": "1.0.0",
  "identifier": "de.gruenerator.desktop",
  "build": {
    "beforeBuildCommand": "cd ../.. && pnpm --filter frontend build",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../../gruenerator_frontend/build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Grünerator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://*.gruenerator.de https://auth.services.moritz-waechter.de https://*.supabase.co wss://*.supabase.co https://api.anthropic.com https://api.openai.com https://api.mistral.ai; img-src 'self' data: blob: https:; font-src 'self' data:; media-src 'self' blob:; frame-ancestors 'none'",
      "freezePrototype": true,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "release": "1",
        "epoch": 0
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "entitlements": "Entitlements.plist",
      "exceptionDomain": null
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["German", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico"
      },
      "wix": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["gruenerator"]
      }
    },
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/netzbegruenung/Gruenerator/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
